<%- include('./partials/header'); -%>
<div class="container pt-4">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div
          class="card-header d-flex justify-content-between align-items-center"
        >
          <h2><%=image.title %></h2>
          
        </div>
        <div class="card-body">
          <div class="text-center">
            <img
              src="../public/upload/<%= image.filename %>"
              alt=""
              class="w-100 h-100 img-thumbnail"
            />
          </div>
          <p><%=image.description %></p>
        </div>
        <div
          class="card-footer d-flex justify-content-between align-items-center"
        >
          
            <button
              class="btn btn-success"
              id="btn-like"
              data-id="<%=image.filename %>"
            >
              <i class="fas fa-thumbs-up"></i> Like
            </button>
          
          <p>
            <span class="likes-count"><%= image.likes %></span>
            <i class="fas fa-heart"></i>
          </p>
          <p><i class="fas fa-eye"></i> <%= image.views %></p>
          <p><i class="fas fa-clock"></i> <%= time %></p>
        </div>
      </div>
      <div class="card mt-2">
        <div
          class="card-header d-flex justify-content-between align-item-center"
        >
          <h3>Comments</h3>
          <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o"></i> Post a Comment
          </button>
        </div>
        <div class="card-body">
          <blockquote>
            <form action="/images/<%=image.uniqueId%>/comment" method="POST">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  name="name"
                  placeholder="Name"
                />
              </div>
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  name="email"
                  placeholder="Email"
                />
              </div>
              <div class="form-group">
                <textarea
                  name="comment"
                  class="form-control"
                  placeholder="Your Comment"
                  rows="2"
                ></textarea>
              </div>
              <div class="form-group">
                <button class="btn btn-success" id="btn-comment">
                  <i class="fa fa-comment"></i> Post
                </button>
              </div>
            </form>
          </blockquote>
          <ul class="list-group p-4">
            <% comments.forEach(comment => { %>
            <li class="list-group-item">
              <div class="row">
                <a href="#" class="col">
                  <img
                    src="http://gravatar.com/avatar/<%=comment.gravatar%>?d=monsterid&s=45"
                  />
                </a>
                <blockquote class="col">
                  <p class="lead"><%=comment.comment%></p>
                  <footer class="blockquote-footer">
                    <%=comment.name%>
                  </footer>
                </blockquote>
              </div>
            </li>
            <%}) %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('./partials/footer'); -%>
